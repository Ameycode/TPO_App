<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#B9E9FC"
    android:padding="10dp">

    <ImageView
        android:id="@+id/company_image"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:scaleType="centerCrop" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#DAF5FF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:background="#ffffff"
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Company Name"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

    <EditText
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:id="@+id/company_criteria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:text="Add Company Criteria"
        android:textSize="20sp"
        android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:id="@+id/company_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Company Description"
                    android:textSize="20sp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:id="@+id/company_higher_package"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Company Higher Package"
                    android:textSize="20sp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:id="@+id/company_average_package"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Company Average Package"
                    android:textSize="20sp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:id="@+id/company_lower_package"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Company Lower Package"
                    android:textSize="20sp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:paddingLeft="10dp"
                    android:background="#ffffff"
                    android:id="@+id/company_depertment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Depertment"
                    android:textSize="20sp"
                    android:paddingBottom="2dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
