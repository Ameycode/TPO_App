<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>

        <Button
            android:id="@+id/button_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Add Company Logo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#CAF4FF"
                android:padding="10dp">

                <EditText
                    android:id="@+id/roll"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#EEF7FF"
                    android:hint="Enter Company Name"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Company Criteria"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Description"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Higher Package"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name4"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Average Package"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name3"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Lower Package"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/name5"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="20dp"
                    android:background="#EEF7FF"
                    android:hint="Add Department"
                    android:padding="5dp"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    android:text="Submit"
                    android:textSize="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
