<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B9E9FC"
    android:padding="10dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0DAFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STUDENT MANAGEMENT"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Search View -->
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:background="#ffffff"
        app:iconifiedByDefault="false"
        app:searchHintIcon="@null"
        app:queryHint="Search Student Here"
        android:focusable="false" />

    <!-- Main content layout using horizontal LinearLayout for cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- CardView for Add Student -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    app:srcCompat="@drawable/addstud" />

                <Button
                    android:layout_gravity="bottom"
                    android:background="@color/black"
                    android:id="@+id/btn_add_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:text="Add Student" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Change Student -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/changestud" />

                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/btn_change_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Change"
                    android:textSize="15sp"
                    android:background="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Block Student -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/blocks" />

                <Button
                    android:id="@+id/btn_block_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:text="Block Student"
                    android:background="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Unblock Student -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    app:srcCompat="@drawable/unblicks" />

                <Button
                    android:id="@+id/btn_unblock_student"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:text="Unblock Student"
                    android:background="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- ListView for Student List -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="20dp">

        <ListView
            android:id="@+id/list_students"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#DAF5FF" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
