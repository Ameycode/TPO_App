<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="5dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        tools:context=".login">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pro_removebg_preview" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#CAF4FF"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewRoll"
                        android:layout_width="55dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/enrollmentnum_removebg_preview" />

                    <EditText
                        android:id="@+id/roll2"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter your enrollment number"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="55dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/usericon_removebg_preview" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter your Username"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="56dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/email_removebg_preview" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter your email"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="54dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/phonenum_removebg_preview" />

                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter your phone number"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="52dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/calender_removebg_preview" />

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Date of Birth"
                        android:inputType="date"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEF7FF"
                    android:padding="5dp"
                    android:text="Gender"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:text="Male"
                        android:textSize="20dp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:text="Female"
                        android:textSize="20dp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EEF7FF"
                        android:padding="5dp"
                        android:text="Branch"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/dropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#EEF7FF"
                        android:spinnerMode="dropdown"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageViewAadhar"
                        android:layout_width="55dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/aadhaaricon" />

                    <EditText
                        android:id="@+id/editTextNumber"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter Your Aadhar number"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageViewCGPA"
                        android:layout_width="55dp"
                        android:layout_height="42dp"
                        app:srcCompat="@drawable/percentage" />

                    <EditText
                        android:id="@+id/editTextNumberDecimal"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="#EEF7FF"
                        android:gravity="center_horizontal"
                        android:hint="Enter Your Percentage/CGPA"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#EEF7FF"
                    android:gravity="center_horizontal"
                    android:onClick="image"
                    android:padding="7dp"
                    android:text="Select Image"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/addcertificates"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#EEF7FF"
                    android:gravity="center_horizontal"
                    android:padding="7dp"
                    android:text="Add Your Certificates"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp" />

                <ListView
                    android:id="@+id/list_item"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="submitData"
                    android:text="SUBMIT"
                    android:layout_marginTop="20dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center" />

    </LinearLayout>

</ScrollView>
