<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#B9E9FC"
    android:padding="10dp">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0DAFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPANY OPPORTUNITIES"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:layout_gravity="center"/>
    </Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="131dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="40dp">

        <Button
            android:layout_gravity="bottom"
            android:id="@+id/btn_add_opportunity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:onClick="addOpportunity"
            android:text="Add Opportunity" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            app:srcCompat="@drawable/addopp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:cardCornerRadius="20dp">
    <ListView
        android:background="#DAF5FF"
        android:id="@+id/list_opportunities"
        android:layout_width="match_parent"
        android:layout_height="529dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>