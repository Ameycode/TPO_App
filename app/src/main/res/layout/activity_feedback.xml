<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B9E9FC"
    android:padding="10dp"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0DAFF">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEEDBACK FORM"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </Toolbar>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="How was your experience ? Give your Feedback."
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DAF5FF"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/nameCardView"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffff"
                    android:hint=" Enter Name"
                    android:textSize="25dp"
                    android:inputType="text"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/enrollmentCardView"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <EditText
                    android:id="@+id/enrollmentNoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffff"
                    android:hint=" Enter Enrollment No."
                    android:textSize="25dp"
                    android:inputType="number"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mobileCardView"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
                <EditText
                    android:id="@+id/mobileNoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#ffff"
                    android:hint=" Enter Mobile No."
                    android:textSize="25dp"
                    android:inputType="number"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/feedbackCardView"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">

                <EditText
                    android:id="@+id/feedbackEditText"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="#ffff"
                    android:hint=" Enter Your Feedback Here"
                    android:inputType="textMultiLine"
                    android:textSize="25dp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:text="Send"
                android:textSize="25dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>